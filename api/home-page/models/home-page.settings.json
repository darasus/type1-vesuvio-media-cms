{
  "kind": "collectionType",
  "collectionName": "home_pages",
  "info": {
    "name": "Home page"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "introduction_text": {
      "type": "richtext",
      "required": true
    },
    "main_text": {
      "type": "richtext",
      "required": true
    },
    "site": {
      "model": "site",
      "via": "home_page"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "intro_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "seo_title": {
      "type": "string",
      "maxLength": 65
    },
    "seo_description": {
      "type": "string",
      "maxLength": 160
    }
  }
}
